<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.danielmoliveira.teste1.ListarContasEmAberto">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Exibindo contas em aberto da instalação: "
        android:id="@+id/txtTituloContasEmAberto"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <View
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:paddingTop="75dp"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/txtTituloContasEmAberto"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:stretchColumns="0,1">
        <!-- Titulo -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2351f8"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Valor R$"
                android:gravity="center"
                android:layout_column="0"

                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vencimento"
                android:layout_column="1"
                android:gravity="center"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_column="3" />
        </TableRow>
        <!-- Espaço-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <!-- Valor -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="R$ 100,00"
                android:gravity="center"
                android:layout_column="0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="22/05/1984"
                android:gravity="center"
                android:layout_column="1" />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagar"
                android:id="@+id/btnPagar1"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_column="3"
                android:onClick="btnPagar_Click" />

        </TableRow>
        <!-- Espaço-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <!-- Valor -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="R$ 1005,58"
                android:gravity="center"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="23/12/1983"
                android:gravity="center"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagar"
                android:id="@+id/btnPagar2"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_column="3"
                android:onClick="btnPagar_Click" />

        </TableRow>
        <!-- Espaço-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>
        <!-- Valor -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="R$ 100,00"
                android:gravity="center"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="22/05/1984"
                android:gravity="center"
                android:layout_column="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagar"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_column="3"
                android:onClick="btnPagar_Click" />

        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# 0000"
        android:id="@+id/txtCodigoInstalacao"
        android:layout_below="@+id/txtTituloContasEmAberto"
        android:layout_alignParentStart="true" />

</RelativeLayout>
