<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.multicom.contasemfatura.ConsultarContaSemFatura">

    <!--SOLICITANDO CODIGO DO CLIENTE -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Consultar contas em aberto"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/txtCodigoUnidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"

            android:hint="Unidade Consumidora" />

    </RelativeLayout>
    <!--FIM SOLICITANDO CODIGO DO CLIENTE -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:id="@+id/btnConsultarCSF"
        android:layout_gravity="right" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nenhuma fatura encontrada"
        android:id="@+id/lblContaSemFatura"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

    <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="25dp"></android.support.v7.widget.LinearLayoutCompat>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#c0ad4d"
        android:showDividers="beginning|middle|end"
        android:touchscreenBlocksFocus="true"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:id="@+id/TableLayoutContaSemFatura"
        android:visibility="invisible"
        >


        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_floating_material_light"
        android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:textAlignment="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_column="0"
            android:text="Codigo"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:textColor="@color/primary_dark_material_dark"
            android:textAlignment="center"
            android:elegantTextHeight="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Data de Vencimento"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textAlignment="center"
            android:textColor="@color/primary_dark_material_dark"
            android:elegantTextHeight="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Valor Devido"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_dark_material_dark"
            android:textAlignment="center"
            android:elegantTextHeight="true" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_span="3"
            tools:context="net.multicom.transacao.TransacoesExibir">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listTransacaoContaSemFatura"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray"/>


        </LinearLayout>
    </TableRow>
</TableLayout>

    </LinearLayout>
