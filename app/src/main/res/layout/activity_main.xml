<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnPagamentoBoleto"
        android:layout_alignParentStart="true"
        android:id="@+id/btnPagamentoBoleto"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        style="@style/Button"
        android:padding="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnContaSemFatura"
        android:layout_below="@+id/btnPagamentoBoleto"
        android:layout_alignParentStart="true"
        android:id="@+id/btnContaSemFatura"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        style="@style/Button"
        android:padding="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_bluetooth_connection"
        android:layout_alignParentStart="true"
        android:id="@+id/btnPinpadsButton"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        style="@style/Button"
        android:padding="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_transactions"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showPinpadsButton"
        android:id="@+id/btnTransactionsButton"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        style="@style/Button"
        android:padding="8dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testar Pagamento"
        android:id="@+id/button2"
        android:layout_gravity="right" />


</LinearLayout>

   </ScrollView>